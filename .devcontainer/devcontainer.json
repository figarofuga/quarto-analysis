{
  "name": "My Workshop Setup",
  "image": "ghcr.io/mcanouil/quarto-codespaces:latest",
  "remoteUser": "vscode",
  "postCreateCommand": "bash ./init-env.sh --what r_py",
  "postStartCommand": "bash -c 'source .venv/bin/activate'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-python.vscode-python-envs",
        "ms-python.vscode-pylance",
        "REditorSupport.r",
        "julialang.language-julia"
      ]
    }
  }
}